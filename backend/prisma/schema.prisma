generator client {
  provider = "prisma-client-js"
  output   = "../src/infrastructure/database/generated/prisma/client"
}

datasource db {
  provider = "mysql"
}

model contacts {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(255)
  contact    String   @unique(map: "uk_contacts_contact") @db.Char(9)
  email      String   @unique(map: "uk_contacts_email") @db.VarChar(255)
  picture    String   @db.VarChar(500)
  created_at DateTime @default(now()) @db.DateTime(0)
  updated_at DateTime @default(now()) @db.DateTime(0)
}
