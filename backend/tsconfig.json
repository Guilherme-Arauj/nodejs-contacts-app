{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "src/types/**/*.d.ts",
    "src/application/middleware/types/**/*.d.ts", 
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "exclude": ["node_modules", "dist"]
}